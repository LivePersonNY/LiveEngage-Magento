<?xml version="1.0"?><config>    <tabs>        <liveengage translate="label" module="liveengage">            <label>LivePerson</label>            <sort_order>200</sort_order>        </liveengage>    </tabs>    <sections>        <liveengage_options translate="label" module="liveengage">            <label>LiveEngage</label>            <tab>liveengage</tab>            <frontend_type>text</frontend_type>            <sort_order>1</sort_order>            <show_in_default>1</show_in_default>            <show_in_website>1</show_in_website>            <show_in_store>1</show_in_store>            <groups>                <general translate="label">                    <label>General Settings</label>                    <frontend_type>text</frontend_type>                    <sort_order>10</sort_order>                    <show_in_default>1</show_in_default>                    <show_in_website>1</show_in_website>                    <show_in_store>1</show_in_store>                    <fields>						<account translate="label comment">							<label>Account number</label>                            <frontend_type>text</frontend_type>                            <sort_order>10</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment>                                <![CDATA[Don't have an account yet? <a href="">Register here</a> to get started with a special promotion for Magento users]]>                            </comment>                        </account>                    </fields>                </general>                <visibility translate="label">                    <label>Visibility Settings</label>                    <frontend_type>text</frontend_type>                    <sort_order>20</sort_order>                    <show_in_default>1</show_in_default>                    <show_in_website>1</show_in_website>                    <show_in_store>1</show_in_store>                    <fields>                        <do_not_show_routes translate="label comment">                            <label>Routes</label>                            <frontend_type>multiselect</frontend_type>                            <source_model>liveengage/system_config_routes</source_model>                            <sort_order>10</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <can_be_empty>1</can_be_empty>                            <comment>Do not display the widget for these sections of the site. Control+click to select multiple</comment>                        </do_not_show_routes>                        <do_not_show_paths translate="label comment">                            <label>Paths</label>                            <frontend_type>textarea</frontend_type>                            <sort_order>20</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment>Do not display the widget on these paths. Enter one path per line.</comment>                        </do_not_show_paths>                    </fields>                </visibility>            </groups>        </liveengage_options>    </sections></config>